{
    "presets": [
        "@babel/preset-env"
    ],

    "plugins": [
     ["module-resolver", {
         "root": ["./"],

         "alias": {
             "@":"./",

             "@client": "./client",

             "@server":"./server",

            

             "@store": "./client/store",

             "@components":"./client/components",

             "@pages":"./client/pages",
            
             "@models":"./server/models",


             "@config": "./server/config",

             "@routes": "./server/routes",

             "@validators": "./server/validators",

             "@controllers":"./server/controllers"
         }
     }]
    ]
}